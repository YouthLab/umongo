                    <MenuItem id="refresh" label="Refresh" call="refresh" icon="stock_refresh.png" iconGroup="icons" key="r" keyMod="cmd+shift"/>
                </Menu>
                <Menu id="command">
                    <MenuItem id="serverStatus" call="serverStatus"/>
